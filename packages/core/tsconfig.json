{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "outDir": "./output/",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ES2022",
      "dom"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "declaration": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": [
      "@types/node"
    ]
  },
  "include": [
    "./**/*.ts",
    "./**/*.js",
    "./**/*.vue"
  ],
  "exclude": [
    "output",
    "node_modules"
  ]
}
